@model IEnumerable<ismailaktasblog.Entities.Makale>
@{
    ViewData["Title"] = "Anasayfa";
}
<link rel="stylesheet" href="~/css/animate.min.css" />
<section>
    <div class="ia_text">
        <span class="animate__animated animate__heartBeat animate__infinite">Hoşgeldiniz</span>
    </div>
    <div class="ia_latest_title">
        <span class="ia_icon">New</span>
        <span>Son Eklenenler</span>
    </div>
    @foreach (var item in Model)
    {
        if (item.Onay == true)
        {
            <div class="ia_latest">
                <div class="ia_titles">
                    <span class="ia_title"><a href="/Home/Detay/@item.MakaleId">@item.Baslik</a></span>
                    <p class="ia_date">@item.Tarih.Day @item.Tarih.Month @item.Tarih.Year</p>
                </div>
                <p>
                    @Html.Raw(@item.Detay.Substring(0, 100)) ...

                </p>

            </div>
        }
    }
</section>